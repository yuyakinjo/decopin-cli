{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "**/*.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}