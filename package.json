{
  "name": "decopin-cli",
  "version": "0.1.0",
  "description": "Next.js App Router風のファイルベースCLIビルダー",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "decopin": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:app": "tsc -p app/tsconfig.json",
    "dev": "npm run build && npm run build:app && npm run dev:regen && mise watch dev-rebuild",
    "dev:build-all": "npm run build && npm run build:app",
    "dev:regen": "node dist/cli.js build --app-dir app --output-dir examples --cli-name cli --verbose",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist examples",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "cli",
    "builder",
    "typescript",
    "file-based",
    "nextjs-style"
  ],
  "author": "yuyakinjo",
  "license": "MIT",
  "files": [
    "dist",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/d3-scale": "^4.0.9",
    "@types/node": "^24.0.0",
    "d3-hierarchy": "^3.1.2",
    "d3-scale": "^4.0.2",
    "simple-git": "^3.28.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/decopin-cli.git"
  },
  "bugs": {
    "url": "https://github.com/username/decopin-cli/issues"
  },
  "homepage": "https://github.com/username/decopin-cli#readme"
}
