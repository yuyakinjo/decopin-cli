{
  "name": "decopin-cli",
  "version": "0.1.0",
  "description": "Next.js App Router風のファイルベースCLIビルダー",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "decopin": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "echo 'Development setup:\\n1. Terminal 1: npm run dev:src\\n2. Terminal 2: npm run dev:app\\n3. After changes: npm run dev:regen\\n4. Test: npm run dev:test'",
    "dev:src": "tsc --watch",
    "dev:app": "tsc -p app/tsconfig.json --watch",
    "dev:regen": "node dist/cli.js build --cli-name my-cli --output-filename generated-cli.js",
    "dev:test": "node dist/generated-cli.js hello",
    "dev:test:all": "node dist/generated-cli.js --help",
    "dev:bun": "echo 'Using Bun for faster development...'; bun --watch app --watch src run dev:full",
    "dev:full": "bun run build:app && bun dist/cli.js build --cli-name my-cli --output-filename generated-cli.js",
    "build:app": "tsc -p app/tsconfig.json",
    "build:all": "npm run build && npm run build:app",
    "test": "vitest run",
    "test:app": "npm run build:app && npm run test && npm run clean:app",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:ci": "biome lint --error-on-warnings .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "clean": "rm -rf dist",
    "clean:app": "find app -name '*.js' -type f -delete",
    "clean:all": "npm run clean && npm run clean:app",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cli",
    "builder",
    "typescript",
    "file-based",
    "nextjs-style"
  ],
  "author": "yuyakinjo",
  "license": "MIT",
  "files": [
    "dist",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/decopin-cli.git"
  },
  "bugs": {
    "url": "https://github.com/username/decopin-cli/issues"
  },
  "homepage": "https://github.com/username/decopin-cli#readme"
}
