{
  "name": "decopin-cli",
  "version": "0.4.2",
  "description": "TypeScript-first CLI builder with lazy loading architecture",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "decopin": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && bun run build:app && bun run build:prod",
    "build:prod": "tsc -p tsconfig.prod.json",
    "build:app": "tsc -p app/tsconfig.json",
    "dev": "bun --env-file app/.env scripts/dev-watch.ts",
    "dev:build-all": "bun run build && bun run build:app",
    "dev:regen": "bunx tsx src/cli.ts build --app-dir app --output-dir examples --cli-name cli --verbose && node scripts/fix-example-paths.js",
    "test": "bun test",
    "test:integration": "bun run build && bun run build:app && bun run dev:regen && bun test test/integration/",
    "test:integration:only": "bun test test/integration/",
    "clean": "rm -rf dist examples",
    "lint": "biome check --write .",
    "benchmark": "scripts/benchmark.sh",
    "benchmark:before": "scripts/benchmark.sh before",
    "benchmark:after": "scripts/benchmark.sh after",
    "benchmark:compare": "scripts/benchmark.sh compare",
    "benchmark:full": "scripts/benchmark.sh full",
    "benchmark:clean": "scripts/benchmark.sh clean",
    "prepublishOnly": "bun run clean && bun run build:prod && bun run build:app && bun run dev:regen && bun test --bail"
  },
  "keywords": [
    "cli",
    "builder",
    "typescript",
    "file-based",
    "nextjs-style"
  ],
  "author": "yuyakinjo",
  "license": "MIT",
  "files": [
    "dist",
    "bun.lockb",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bun": "^1.2.19",
    "@types/node": "^24.2.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/decopin-cli.git"
  },
  "bugs": {
    "url": "https://github.com/username/decopin-cli/issues"
  },
  "homepage": "https://github.com/username/decopin-cli#readme"
}
